;; turtle procedure to update thresholds
to update-threshold
  ask turtles[
    if threshold-per-behavior [
      foreach behav-id-list [
        if array:item positive-global-effect? ? [
          let stable-threshold (array:item thresholds-backup ? - 0.05)
          let temp-threshold  (0.05 * exp ( 0 - (0.25 * array:item global-population ?) ) + stable-threshold )
          ifelse temp-threshold < 0.05 [
            array:set thresholds ? 0.05
          ][
          array:set thresholds ? temp-threshold
          ]
        ]
      ]   
    ]
  ]

end 

;; turtle procedure to update costs
to update-costs
    if cost-per-behavior [
      foreach behav-id-list [
          let stable-cost (array:item costs ? - 0.05)
          let temp-costs  ( exp ( 0 - (0.25 * array:item global-population ?) )  )
          ifelse temp-costs < 0.05 [
            array:set costs ? 0.05
          ][
          array:set costs ? temp-costs
          ]
      ]   
    ]
end 